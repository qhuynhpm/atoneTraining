<div class='parent-wrapper'>
  <%= form_tag login_path, class: "login-form" do %>
    <h2>ようこそ、POKERへ！</h2>

    <div class="form-group">
      <%= text_field_tag :email, nil, class: "inputBox", placeholder: "Email", required: true %>
    </div>

    <div class="form-group">
      <%= password_field_tag :password, nil, class: "inputBox", placeholder: "パスワード", required: true %>
    </div>

    <div class="form-group">
      <%= submit_tag "ログイン", class: "submit-button", id: "login-button" %>
    </div>

    <div class="links">
      <%= link_to "パスワード忘れた場合", reset_password_path %>
      <%= link_to "登録", signup_path %>
    </div>

    <% if flash[:failed] %>
      <div class="form-group">
        <%= label_tag "*ログイン失敗しました！" %>
      </div>
    <% end %>
  <% end %>
</div>
